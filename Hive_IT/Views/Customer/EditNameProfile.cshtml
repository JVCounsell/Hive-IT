@model Hive_IT.Models.Customers.CustomerProfileViewModel

@{
    ViewData["Title"] = "Edit Customer Name";
}

<div class="clearfix">
    <br />
    <a class="btn btn-primary pull-left" asp-action="List">
        <span class="glyphicon glyphicon-arrow-left"></span> Return To List
    </a>
    <a class="edit-name-cancel btn btn-danger pull-right" asp-action="Profile" asp-route-id="@Model.CusId">
        <span class="glyphicon glyphicon-stop"></span> Cancel Edit
    </a>
</div>

<div class="customer-profile">
    <div class="panel customer-heading-panel text-center">
        <div class="panel-heading">
            <fieldset>
                <form role="form" asp-action="EditNameProfile">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="All" id="input-validation-error"></div>

                    <div class="form-group col-sm-6">
                        <label asp-for="Given" style="font-size: 2em"></label>
                        <input type="text" asp-for="Given" class="form-control text-center" style="font-size: 2em" />
                        <span asp-validation-for="Given" class="field-validation-error"></span>
                    </div>

                    <div class="form-group col-sm-6">
                        <label asp-for="Surname" style="font-size: 2em"></label>
                        <input type="text" asp-for="Surname" class="form-control text-center" style="font-size: 2em" />
                        <span asp-validation-for="Surname" class="field-validation-error"></span>
                    </div>

                    <div>
                        <label>&nbsp;</label>
                        <button type="submit" class="btn btn-primary">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"> Save Changes</span>
                        </button>
                    </div>
                </form>
            </fieldset>
        </div>
        <div class="panel-footer">Created: @Model.Creation.ToString("D")</div>
    </div>

   
    <ul class="list-group col-xs-6 clearfix" id="customer-phone-list">            
        <li class="list-group-item clearfix">
            Phonenumbers:                
        </li>
        @foreach (var phone in Model.Phones)
        {
            @Html.Partial("_ViewPhone", phone)
        }
    </ul>

    <ul class="list-group col-xs-6 clearfix" id="customer-email-list">
        <li class="list-group-item clearfix">
            Email Addresses:
        </li>
        @foreach (var email in Model.Emails)
        {
            @Html.Partial("_ViewEmail", email)
        }
    </ul>

    <ul class="list-group col-xs-12 clearfix" id="customer-address-list">
        <li class="list-group-item clearfix">
            Mailing Addresses:
        </li>
        @foreach (var address in Model.Addresses)
        {
            @Html.Partial("_ViewAddress", address)
        }
    </ul>       
    
    <div>
        <br /><br />
    </div>
</div>
