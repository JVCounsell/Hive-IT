@model Hive_IT.Data.CustomerPhoneNumber

<li class="list-group-item clearfix">
    <fieldset>
        <form asp-action="EditPhone" role="form">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" id="input-validation-error"></div>

            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input type="text" asp-for="PhoneNumber " class="form-control" />
                <span asp-validation-for="PhoneNumber" class="field-validation-error"></span>
            </div>

            @Html.HiddenFor(v => v.CustomerId)
            @Html.HiddenFor(v => v.PhoneId)

            @Html.Hidden("ph", Model.PhoneNumber)
                <div>
                    <label>&nbsp;</label>
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Save Changes
                    </button>

                    <a class="edit-name-cancel btn btn-danger pull-right" asp-action="Profile" asp-route-id="@Model.CustomerId">
                        <span class="glyphicon glyphicon-stop"></span> Cancel Edit
                    </a>
                </div>
        </form>
    </fieldset>
</li>