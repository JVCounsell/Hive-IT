@model Hive_IT.Data.CustomerEmail

<li class="list-group-item clearfix">
    <fieldset>
        <form asp-action="AddEmail" role="form">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" id="input-validation-error"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="text" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="field-validation-error"></span>
            </div>

            @Html.HiddenFor(v => v.CustomerId)

            <div class="clearfix">
                <label>&nbsp;</label>
                <button type="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Email
                </button>

                <a class="btn btn-danger pull-right" asp-action="Profile" asp-route-id="@Model.CustomerId">
                    <span class="glyphicon glyphicon-stop"></span> Cancel
                </a>
            </div>
        </form>
    </fieldset>
</li>