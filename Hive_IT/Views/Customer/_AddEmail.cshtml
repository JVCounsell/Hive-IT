@model Hive_IT.Data.CustomerEmail

<div class="panel panel-primary">
    <div class="panel-heading">
        <fieldset>
            <form asp-action="AddEmail" role="form">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="All" class="input-validation-error"></div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input type="text" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>

                @Html.HiddenFor(v => v.CustomerId)

                <div>
                    <label>&nbsp;</label>
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Email
                    </button>
                </div>
            </form>
        </fieldset>
    </div>
</div> 