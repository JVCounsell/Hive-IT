@{
    ViewData["Title"] = "Customer Profile";
    //TODO: Make the information displayed in interesting way, not <p>
    //Also maybe partials? Transform <button> to <a> or add some js as well.
}
@model Hive_IT.Models.Customers.CustomerProfileViewModel

<h2>@Model.Given @Model.Surname</h2>
<br />

<p>@Model.Creation.ToString("D")</p><br />
@{
    if (Model.Phones.Any())
    {
        foreach (var phone in Model.Phones)
        {
            <p>@phone.PhoneNumber</p><br />
            <button class="btn btn-info">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</button>
            <button class="btn btn-danger">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete</button>
        }

        <button class="btn btn-success">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add a phonenumber</button>
    }

    if (Model.Emails.Any())
    {
        foreach (var email in Model.Emails)
        {
            <p>@email.Email</p><br />
            <button class="btn btn-info">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
            </button>
            <button class="btn btn-danger">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete
            </button>
        }

        <button class="btn btn-success">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add a Email Address</button>
    }

    if (Model.Addresses.Any())
    {
        foreach (var address in Model.Addresses)
        {
            if (address.StreetAddress != null)
            {
                <p>@address.StreetAddress</p>
            }

            if (address.City != null)
            {
                <p>@address.City</p>
            }

            if (address.ProvState != null)
            {
                <p>@address.ProvState</p>
            }

            if (address.Country != null)
            {
                <p>@address.Country</p>
            }

            if (address.Postal != null)
            {
                <p>@address.Postal</p>
            }

            <button class="btn btn-info">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
            </button>
            <button class="btn btn-danger">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete
            </button>
        }

        <button class="btn btn-success">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add mailing information</button>
    }
}
