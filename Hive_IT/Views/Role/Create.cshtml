@{
    ViewData["Title"] = "Create A Role";
}

 @model Hive_IT.Data.ApplicationRole

<fieldset class="role">
    <h1>Create a role</h1>
    <br />

    <form role="form" asp-action="Create">
        @Html.AntiForgeryToken()

        <div asp-validation-summary ="All" class="input-validation-error"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="field-validation=error"></span>
        </div>

        <div>
            <label>&nbsp;</label>
            <button type="submit" class="btn btn-primary" > Create a Role!</button>
        </div>

    </form>
</fieldset>