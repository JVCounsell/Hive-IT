@{
    ViewData["Title"] = "Roles";
    }

@model Hive_IT.Models.RoleListViewModel

<h1>Available roles</h1>
<br />
    <p>Below are all the roles that are available to be assigned.</p>
    <br /><br />

<div class="=role-table">
    <table class="table-striped table-bordered text-center" >
        <thead>
            <tr>
                <th class="col-sm-6 text-center">Name of Role</th>
                @if (User.IsInRole("Admin"))
                {
                    <th textalign="center" class="col-sm-4 text-center">Action</th>
                }
                               
            </tr>
        </thead>
        <tbody>
            @foreach(var role in Model.Roles)
            {
                <tr>
                    <td style="padding-left: 1em">@role</td>
                   @if (User.IsInRole("Admin"))
                   {
                    <td>
                        @{
                            if (role.ToLower() != "admin" && role.ToLower() != "manager")
                            {
                                using (Html.BeginForm("delete", "roles", new { id = role }))
                                {
                                    <button value="DELETE" formnovalidate class=" col-sm-12 btn btn-danger" 
                                            onclick="return confirm('Are you sure you want to delete this position?')">Delete Role</button>
                                }
                            }
                        }
                    </td>
                    }                    
                </tr>
             }
        </tbody>
    </table>
</div>
<br />
@if (User.IsInRole("Admin"))
{
    <br />
    <a class="btn btn-success bottom-left" href="@Url.Action("create", "roles")">+ Add a new role</a>
}
