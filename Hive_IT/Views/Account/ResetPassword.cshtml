@{
    ViewData["Title"] = "Reset Password";
}
@model Hive_IT.Models.Account.ResetPasswordViewModel

<fieldset>
    <h1 class="text-center"> Reset the Password for @Model.Username</h1>
    <br />

    <form role="form" asp-action="ResetPassword" >
        @Html.AntiForgeryToken()

        <div asp-validation-summary="All" class="input-validation-error"></div>

        <div class="form-group">
            <label asp-for="NewTemporaryPassword"></label>
            <input type="password" asp-for="NewTemporaryPassword" class="form-control" />
            <span asp-validation-for="NewTemporaryPassword" class="field-validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmTemporaryPassword"></label>
            <input type="password" asp-for="ConfirmTemporaryPassword" class="form-control" />
            <span asp-validation-for="ConfirmTemporaryPassword" class="field-validation-error"></span>
        </div>

        @Html.HiddenFor(r => r.Username)
        @Html.Hidden("username", Model.Username)

        <div>
            <label>&nbsp;</label>
            <button type="submit" class="btn btn-primary pull-left">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Reset Password</button>

            <a class="btn btn-danger pull-right" asp-action="Profile" asp-route-username="@Model.Username">
                <span class="glyphicon glyphicon-stop"></span> Cancel
            </a>
        </div>
    </form>
</fieldset>